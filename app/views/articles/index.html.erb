<h2>Listing All Articles</h2>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
  </tr>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to "Show", article %></td>
      <td><%= link_to "Edit", edit_article_path(article) %></td>
      <td><%= link_to "Delete", article_path(article), data: {method: "DELETE", confirm: "Are you sure to delete?"} %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Article", new_article_path %>