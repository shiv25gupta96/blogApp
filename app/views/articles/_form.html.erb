
<% if @article.errors.any? %>
  <div id="error_explanation">
    <p><h3><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved.</h3></p>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @article, local: true do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit %>&nbsp;|&nbsp;<%= link_to 'Back', articles_path %>
  </p>
<% end %>